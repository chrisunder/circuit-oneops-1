#!/usr/bin/env ruby
#
# gets presto metrics from manager/status xml api
#

require 'net/http'
require 'rubygems'
require 'xmlsimple'

port = <%= node.presto.port %>

stats = XmlSimple.xml_in(`curl -s --user admin:admin "http://127.0.0.1:#{port}/manager/status?XML=true"`,{ 'KeyAttr' => 'name', 'ForceArray' => false })

#puts "stats="+stats.inspect
#"connector"=>{"http-8080"=>{"threadInfo"=>{

arg = ARGV[0]
perf = nil

<%
connector_name = "http-#{node.presto.port}"

%>

if arg == "JvmInfo"
  jvm = stats["jvm"]["memory"]
  max = jvm["max"]
  free = jvm["free"]
  total = jvm["total"]
  percentUsed = ((total.to_f-free.to_f) / total.to_f) * 100

  perf = "max=#{max} free=#{free} total=#{total} percentUsed=#{percentUsed}"

else
  puts "usage: check_presto.rb [JvmInfo] ... ex) check_presto.rb ThreadInfo"

end

puts perf + "|"+ perf
